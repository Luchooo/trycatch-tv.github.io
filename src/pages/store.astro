    <!-- Whatsapp Button -->
    <a
      href="https://api.whatsapp.com/send/?phone=573164907627&text=Hola,+más+info+por+favor+mi+nombre+es&type=phone_number&app_absent=0"
      target="_blank"
      class="whatsapp-button"
    >
      <div class="bg-green-500 p-4 rounded-full shadow-lg">
        <span class="flex justify-between">
          <Icon
            class="text-white hover:text-tc-yellow w-12 md:w-8 h-12 md:h-8"
            name="ic:baseline-whatsapp"
          />
        </span>
      </div>
    </a>
    <!-- Whatsapp Button -->
  </section>
